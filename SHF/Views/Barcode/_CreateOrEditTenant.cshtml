                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.BarcodeCategoryValue" ng-bind="errors.formErrors.BarcodeCategoryValue"></span>
