@functions{

    public string AntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}

<div class="modal-dialog">
    <div class="modal-content">
        <form name="myForm" ng-submit="myForm.$valid && createOreditAsyncForm()" novalidate>
            <!--myForm.$valid && -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Customer Details</h4>
            </div>
            <div class="modal-body">
                <!-- general form elements -->
                <div id="errorMessages" class="text-danger" ng-if="ValidationSummary" ng-repeat="vs in ValidationSummary">{{vs}}</div>
                <div class="box box-primary">
                    <div class="box-body">
                        <input id="antiForgeryToken" data-ng-model="antiForgeryToken" type="hidden" data-ng-init="antiForgeryToken='@AntiForgeryToken()'" />
                      
                        <div class="form-group" ng-class="{'has-error': (myForm.TenantName.$touched || myForm.TenantName.$dirty)  && myForm.TenantName.$invalid}">
                            <label>Tenant&nbsp;Name</label>
                            <select name="TenantName" ng-model="CustomerCreateOrEditViewModel.Tenant_ID" class="form-control" style="width: 100%;" ng-options="x.ID as x.Name for x in AllTenants" required>
                                <option value="" ng-selected="CustomerCreateOrEditViewModel.SelectedTenant_ID < 0">-- Select --</option>
                            </select>
                            <div class="help-block" ng-messages="myForm.TenantName.$error" ng-if="myForm.TenantName.$touched || myForm.TenantName.$dirty && myForm.TenantName.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.Tenant_ID" ng-bind="errors.formErrors.Tenant_ID"></span>
                        </div>

                        <div class="form-group" ng-class="{'has-error': (myForm.Name.$touched || myForm.Name.$dirty)  && myForm.Name.$invalid}">
                            <label>Name</label>
                            <input type="text" class="form-control" name="Name" ng-model="CustomerCreateOrEditViewModel.Name" ng-disabled="Processing" autocomplete="off" placeholder="Enter Customer Name" tooltip-placement="top" uib-tooltip="Enter First Name" pattern="[A-Za-z ]*$" required />
                            <div class="help-block" ng-messages="myForm.Name.$error" ng-if="myForm.Name.$touched || myForm.Name.$dirty && myForm.Name.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.Name" ng-bind="errors.formErrors.Name"></span>
                        </div>

                        <div class="form-group" ng-class="{'has-error': (myForm.CustomerCode.$touched || myForm.CustomerCode.$dirty)  && myForm.CustomerCode.$invalid}">
                            <label>Customer&nbsp;Code</label>
                            <input type="text" class="form-control" name="CustomerCode" ng-model="CustomerCreateOrEditViewModel.CustomerCode" ng-disabled="Processing" autocomplete="off" placeholder="Enter Customer Code" tooltip-placement="top" uib-tooltip="Enter Customer Code" pattern="[A-a-zZ0-9]*$" required />
                            <div class="help-block" ng-messages="myForm.CustomerCode.$error" ng-if="myForm.CustomerCode.$touched || myForm.CustomerCode.$dirty && myForm.CustomerCode.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.CustomerCode" ng-bind="errors.formErrors.CustomerCode"></span>
                        </div>

                        <div class="form-group" ng-class="{'has-error': (myForm.BillingAddress.$touched || myForm.BillingAddress.$dirty)  && myForm.BillingAddress.$invalid}">
                            <label>Billing&nbsp;Address</label>
                            <textarea class="form-control" name="BillingAddress" ng-model="CustomerCreateOrEditViewModel.BillingAddress" ng-disabled="Processing" autocomplete="off" placeholder="Enter Customer Address" tooltip-placement="top" uib-tooltip="Enter Customer Address" pattern="[A-Za-z0-9 ]*$" required></textarea>
                            <div class="help-block" ng-messages="myForm.BillingAddress.$error" ng-if="myForm.BillingAddress.$touched || myForm.BillingAddress.$dirty && myForm.BillingAddress.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.BillingAddress" ng-bind="errors.formErrors.BillingAddress"></span>
                        </div>

