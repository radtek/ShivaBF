                            <div class="help-block" ng-messages="myForm.ShippingAddress.$error" ng-if="myForm.ShippingAddress.$touched || myForm.ShippingAddress.$dirty && myForm.ShippingAddress.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.ShippingAddress" ng-bind="errors.formErrors.ShippingAddress"></span>
                        </div>

                        <div class="form-group" ng-class="{'has-error': (myForm.ContactPerson.$touched || myForm.ContactPerson.$dirty)  && myForm.ContactPerson.$invalid}">
                            <label>Contact&nbsp;Person</label>
                            <input type="text" class="form-control" name="ContactPerson" ng-model="CustomerCreateOrEditViewModel.ContactPerson" ng-disabled="Processing" autocomplete="off" placeholder="Enter Contact Person's Name" tooltip-placement="top" uib-tooltip="Enter Contact Person's Name" pattern="[A-Za-z ]*$" required />
                            <div class="help-block" ng-messages="myForm.ContactPerson.$error" ng-if="myForm.ContactPerson.$touched || myForm.ContactPerson.$dirty && myForm.ContactPerson.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.ContactPerson" ng-bind="errors.formErrors.ContactPerson"></span>
                        </div>

                        <div class="form-group" ng-class="{'has-error': (myForm.ContactNumber.$touched || myForm.ContactNumber.$dirty)  && myForm.ContactNumber.$invalid}">
                            <label>Contact&nbsp;Number</label>
                            <input type="text" class="form-control" name="ContactNumber" ng-model="CustomerCreateOrEditViewModel.ContactNumber" ng-disabled="Processing" autocomplete="off" placeholder="Enter Contact Number" tooltip-placement="top" uib-tooltip="Enter Contact Number" pattern="[0-9]{8}" />
                            <div class="help-block" ng-messages="myForm.ContactNumber.$error" ng-if="myForm.ContactNumber.$touched || myForm.ContactNumber.$dirty && myForm.ContactNumber.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.ContactNumber" ng-bind="errors.formErrors.ContactNumber"></span>
                        </div>

                        <div class="form-group" ng-class="{'has-error': (myForm.MobileNumber.$touched || myForm.MobileNumber.$dirty)  && myForm.MobileNumber.$invalid}">
