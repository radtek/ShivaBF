                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.MobileNumber" ng-bind="errors.formErrors.MobileNumber"></span>
                        </div>

                        <div class="form-group" ng-class="{'has-error': (myForm.Email.$touched || myForm.Email.$dirty) && myForm.Email.$invalid}">
                            <label>Email</label>
                            <input type="email" class="form-control" name="Email" ng-model="CustomerCreateOrEditViewModel.Email" ng-disabled="Processing" autocomplete="off" placeholder="Enter Email" tooltip-placement="top" uib-tooltip="Enter Email" required />
                            <div class="help-block" ng-messages="myForm.Email.$error" ng-if="myForm.Email.$touched || myForm.Email.$dirty && myForm.Email.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.Email" ng-bind="errors.formErrors.Email"></span>
                        </div>

                        <div class="form-group" ng-class="{'has-error': (myForm.GSTNo.$touched || myForm.GSTNo.$dirty)  && myForm.GSTNo.$invalid}">
                            <label>GST Number</label>
                            <input type="text" class="form-control" name="GSTNo" ng-model="CustomerCreateOrEditViewModel.GSTNo" ng-disabled="Processing" autocomplete="off" placeholder="Enter GST Number" tooltip-placement="top" uib-tooltip="Enter GST Number" pattern="[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9]{1}[Z]{1}[0-9A-Z]{1}" />
                            <div class="help-block" ng-messages="myForm.GSTNo.$error" ng-if="myForm.GSTNo.$touched || myForm.GSTNo.$dirty && myForm.GSTNo.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.GSTNo" ng-bind="errors.formErrors.GSTNo"></span>
                        </div>

                        <div class="form-group" ng-class="{'has-error': (myForm.VendorCode.$touched || myForm.VendorCode.$dirty)  && myForm.VendorCode.$invalid}">
                            <label>Vendor&nbsp;Code</label>
                            <input type="text" class="form-control" name="VendorCode" ng-model="CustomerCreateOrEditViewModel.VendorCode" ng-disabled="Processing" autocomplete="off" placeholder="Enter Customer Code" tooltip-placement="top" uib-tooltip="Enter Vendor Code" pattern="[A-a-zZ0-9]*$" required />
                            <div class="help-block" ng-messages="myForm.VendorCode.$error" ng-if="myForm.VendorCode.$touched || myForm.VendorCode.$dirty && myForm.VendorCode.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.VendorCode" ng-bind="errors.formErrors.VendorCode"></span>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" ng-if="!Processing" class="btn btn-sm btn-success pull-left" ng-disabled="myForm.$invalid">Save</button>
                <span ng-if="Processing" class="btn btn-sm btn-success pull-left">Processing...</span>
                <button type="reset" class="btn btn-sm btn-default pull-left" ng-click="Reset()">Clear</button>
                <span class="btn btn-sm btn-default" data-dismiss="modal">Close</span>
            </div>
        </form>
    </div>
    <!-- /.modal-content -->
</div>
