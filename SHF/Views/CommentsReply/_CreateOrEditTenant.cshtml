                            <div class="help-block" ng-messages="myForm.BlogComment.$error" ng-if="myForm.BlogComment.$touched || myForm.BlogComment.$dirty && myForm.BlogComment.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.BlogComment" ng-bind="errors.formErrors.BlogComment"></span>
                        </div>
