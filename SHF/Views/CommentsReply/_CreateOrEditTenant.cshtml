                        </div>
                        <div class="form-group" ng-class="{'has-error': (myForm.Url.$touched || myForm.Url.$dirty)  && myForm.Url.$invalid}">
                            <label>Url</label>
                            <input type="text" class="form-control" name="Url" ng-model="CommentsReplyCreateOrEditViewModel.Url" ng-disabled="Processing" autocomplete="off" placeholder="Enter Url" tooltip-placement="top" disabled uib-tooltip="Enter Url" required />
