                            </select>
                            <div class="help-block" ng-messages="myForm.BlogTitle.$error" ng-if="myForm.BlogTitle.$touched || myForm.BlogTitle.$dirty && myForm.BlogTitle.$invalid">
                                <div ng-messages-include="~/ValidationMessages.html"></div>
                            </div>
                            <span class="text-danger" ng-show="errors.formErrors.SubSubCat_Id" ng-bind="errors.formErrors.SubSubCat_Id"></span>
                        </div>
                        <div class="form-group" ng-class="{'has-error': (myForm.BlogComment.$touched || myForm.BlogComment.$dirty)  && myForm.BlogComment.$invalid}">
