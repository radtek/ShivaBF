<!-- Main content -->
<section class="invoice">
    <!-- title row -->
    <div id="purchaseOrderPrint" style="margin:10px !important;">
        <div class="row">
            <div class="col-xs-6">
                <address>
                    <b>{{PurchaseOrderPrintViewModel.Tenant_Name}}</b><br />

                    {{PurchaseOrderPrintViewModel.TenantBillingAddress.Street1}},
                    {{PurchaseOrderPrintViewModel.TenantBillingAddress.Street2}},<br />
                    @*{{PurchaseOrderPrintViewModel.TenantBillingAddress.CityOrDistrictValue}},<br />*@
                    {{PurchaseOrderPrintViewModel.TenantBillingAddress.StateValue}},{{PurchaseOrderPrintViewModel.TenantBillingAddress.ZipCode}},<br />
                    {{PurchaseOrderPrintViewModel.TenantBillingAddress.CountryValue}},<br />
                    Phone :{{PurchaseOrderPrintViewModel.TenantBillingAddress.Phone}}<br />
                    Fax :{{PurchaseOrderPrintViewModel.TenantBillingAddress.Fax}}<br />
                    Email :{{PurchaseOrderPrintViewModel.Tenant_Email}}<br />
                    GST:{{PurchaseOrderPrintViewModel.Tenant_GST}}
                </address>
