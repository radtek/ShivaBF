        <button class="btn btn-sm btn-default" tabindex="-1" ng-click="PrintPO('modal-printPurchaseOrder');"><i class="fa fa-print"></i> Print</button>
        <span class="btn btn-sm btn-danger" ng-click="ShowConfirm('modal-printPurchaseOrder')">Close</span>
