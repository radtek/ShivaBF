                </div>*@
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                Vendor Address
                <address>
                    <b>{{PurchaseOrderPrintViewModel.Vendor_Name}}</b><br>

                    {{PurchaseOrderPrintViewModel.VendorBillingAddress.Street1}},
                    {{PurchaseOrderPrintViewModel.VendorBillingAddress.Street2}},<br />
                    @*{{PurchaseOrderPrintViewModel.VendorBillingAddress.CityOrDistrictValue}},<br />*@
                    {{PurchaseOrderPrintViewModel.VendorBillingAddress.StateValue}},{{PurchaseOrderPrintViewModel.VendorBillingAddress.ZipCode}}<br />
                    {{PurchaseOrderPrintViewModel.VendorBillingAddress.CountryValue}},<br />
                    Phone : {{PurchaseOrderPrintViewModel.VendorBillingAddress.Phone}}<br />
                    Fax : {{PurchaseOrderPrintViewModel.VendorBillingAddress.Fax}}<br />
                    GST : {{PurchaseOrderPrintViewModel.Vendor_GSTNo}}

                </address>
            </div>

            <div class="col-sm-4 invoice-col">
                Deliver At
                <address>

                    {{PurchaseOrderPrintViewModel.TenantDeliveryAddress.Street1}},
                    {{PurchaseOrderPrintViewModel.TenantDeliveryAddress.Street2}},<br />
                    @*{{PurchaseOrderPrintViewModel.TenantDeliveryAddress.CityOrDistrictValue}},<br />*@
                    {{PurchaseOrderPrintViewModel.TenantDeliveryAddress.StateValue}},{{PurchaseOrderPrintViewModel.TenantDeliveryAddress.ZipCode}},<br />
                    {{PurchaseOrderPrintViewModel.TenantDeliveryAddress.CountryValue}},<br />
                    Phone :{{PurchaseOrderPrintViewModel.TenantDeliveryAddress.Phone}}<br />
                    Fax :{{PurchaseOrderPrintViewModel.TenantDeliveryAddress.Fax}}<br />
                    GST:{{PurchaseOrderPrintViewModel.Tenant_GST}}<br />
                    Contact Person :{{PurchaseOrderPrintViewModel.Tenant_ContactPerson}}<br />
                    Mobile :{{PurchaseOrderPrintViewModel.Tenant_ContactNumber}}
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                @*<p>PO #{{PurchaseOrderPrintViewModel.ID}}</p><br />*@
                <span>
                    <span style="display: flex;justify-content: flex-start;padding-left:21px!important" class="pull-left"> PO Date : </span>
                    <span style="display: flex;justify-content: flex-end;" ng-if="PurchaseOrderPrintViewModel.CreatedOns"> {{PurchaseOrderPrintViewModel.CreatedOns | date : format : shortDate }} </span>
                </span>

                <span>
                    <span style="display: flex;justify-content: flex-start;" class="pull-left">Quotation # :</span>
                    <span style="display: flex;justify-content: flex-end;" ng-if="PurchaseOrderPrintViewModel.QuotationID">{{PurchaseOrderPrintViewModel.QuotationID}}</span>
                </span>

                <span>
                    <span style="display: flex;justify-content: flex-start;padding-left:40px!important" class="pull-left">  Ref # : </span>
                    <span style="display: flex;justify-content: flex-end;" ng-if="PurchaseOrderPrintViewModel.ReferenceNumber"> {{PurchaseOrderPrintViewModel.ReferenceNumber}} </span>
                </span>

                @*<span>
                        <span style="display: flex;justify-content: flex-start;padding-left:41px!important" class="pull-left"> Note : </span>
                        <span style="display: flex;justify-content: flex-end;" ng-if="PurchaseOrderPrintViewModel.Remark"> {{PurchaseOrderPrintViewModel.Remark}} </span>
                    </span>*@

                <span>
                    <span style="display: flex;justify-content: flex-start;padding-left:22px!important" class="pull-left">  Account : </span>
                    <span style="display: flex;justify-content: flex-end;"> N/A </span>
                </span>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Item & Description</th>
                            <th>HSN/SAC</th>
                            <th>Qty</th>
                            @*<th>Uom</th>*@
                            <th>Rate</th>
                            @*<th>Tax</th>*@
                            <th ng-if="IsSameState">CGST</th>
                            <th ng-if="IsSameState">SGST</th>
                            <th ng-if="!IsSameState">IGST</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in PurchaseOrderPrintViewModel.PurchaseOrderDetailsPrintViewModels">
                            <td>{{$index+1}}</td>
                            <td>
                                {{item.Product_Name}}<br />
                                {{item.Product_Description}}<br />
                                <p ng-if="item.Product_SKU">SKU:[{{item.Product_SKU}}]</p>
                                @*<label ng-if="item.Product_HSN"><strong>HSN:</strong> [{{item.Product_HSN}}]</label>*@

                            </td>
                            <td>
                                {{item.Product_HSN}}
                                @*{{item.Product_SKU}}*@
                            </td>

                            <td>
                                {{item.Quantity | currency :"" : 2}}<br />
                                {{item.UnitOfMeasurement_DisplayName}}
                            </td>
                            @*<td>{{item.UnitOfMeasurement_DisplayName}}</td>*@
                            <td>{{item.PricePerUnit | currency :"" : 2}}</td>
                            @*<td>0.00 %</td>*@
                            <td ng-if="IsSameState">
                                {{item.CGST | currency : '' : 2}} <br ng-if="IsSameState" />
                                <span>{{item.CGSTPercent  | currency : '' : 2}}&nbsp;%</span>
                            </td>
                            <td ng-if="IsSameState">
                                {{item.SGST | currency : '' : 2}} <br ng-if="IsSameState" />
                                <span>{{item.SGSTPercent | currency : '' : 2}}&nbsp;%</span>
                            </td>
                            <td ng-if="!IsSameState">
                                {{item.IGST | currency : '' : 2}} <br ng-if="!IsSameState" />
                                <span>{{item.IGSTPercent | currency : '' : 2 }}&nbsp;%</span>
                            </td>
                            <td>{{item.TotalAmount | currency :"" : 2}}</td>
                        </tr>

                        @*@{
                                var i = 1;
                                foreach (var item in Model.PurchaseOrderDetails)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Product.Name<br />@item.Product.SKU<br /></td>
                                        <td>@item.Product.HSN</td>
                                        <td>@item.Product.Description</td>
                                        <td>@item.Quantity.ToString("0.00")</td>
                                        <td>@item.UnitOfMeasurement.DisplayName</td>
                                        <td><i class="fa fa-inr"></i>@item.PricePerUnit.ToString("0.00")</td>
                                        <td><i class="fa fa-inr"></i>0.00</td>
                                        <td><i class="fa fa-inr"></i>@item.TotalAmount.ToString("0.00")</td>
                                    </tr>
                                    i++;
                                }
                            }*@
                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

        <div class="row">
            <!-- accepted payments column -->
            <div class="col-xs-6">
                <p class="lead">Terms and Conditions:</p>
                @* <img src="../../dist/img/credit/visa.png" alt="Visa">
                    <img src="../../dist/img/credit/mastercard.png" alt="Mastercard">
                    <img src="../../dist/img/credit/american-express.png" alt="American Express">
                    <img src="../../dist/img/credit/paypal2.png" alt="Paypal">*@
                <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;" ng-if="PurchaseOrderPrintViewModel.TermsAndConditions" ng-bind-html="PurchaseOrderPrintViewModel.TermsAndConditions">
                    @*@Html.Raw(Model.TermsAndConditions)*@
                </p>
            </div>
            <!-- /.col -->
            <div class="col-xs-6">
                <p class="lead"> </p>
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th style="width:50%">Subtotal</th>
                            <td><i class="fa fa-inr"></i>{{PurchaseOrderPrintViewModel.SubTotal | currency :"" : 2}}</td>
                        </tr>
                        @*<tr>
                                <th>Tax</th>
                                <td><i class="fa fa-inr"></i>{{PurchaseOrderPrintViewModel.TaxTotal | currency :"" : 2}}</td>
                            </tr>*@
                        <tr ng-if="IsSameState">
                            <th style="width:50%">CGST&nbsp;&nbsp;({{PurchaseOrderPrintViewModel.CGSTPercent | currency :"" : 2}}&nbsp;%)</th>
                            <td><i class="fa fa-inr"></i>{{PurchaseOrderPrintViewModel.CgstTotal | currency :"" : 2}}</td>
                        </tr>
                        <tr ng-if="IsSameState">
                            <th style="width:50%">SGST&nbsp;&nbsp;({{PurchaseOrderPrintViewModel.SGSTPercent | currency :"" : 2}}&nbsp;%)</th>
                            <td><i class="fa fa-inr"></i>{{PurchaseOrderPrintViewModel.SgstTotal | currency :"" : 2}}</td>
                        </tr>
                        <tr ng-if="!IsSameState">
                            <th style="width:50%">IGST&nbsp;&nbsp;({{PurchaseOrderPrintViewModel.IGSTPercent | currency :"" : 2}}&nbsp;%)</th>
                            <td><i class="fa fa-inr"></i>{{PurchaseOrderPrintViewModel.IgstTotal | currency :"" : 2}}</td>
                        </tr>
                        @*<tr>
                                <th>Shipping:</th>
                                <td><i class="fa fa-inr"></i>0.00</td>
                            </tr>*@
                        <tr>
                            <th>Total:</th>
                            <td><i class="fa fa-inr"></i>{{PurchaseOrderPrintViewModel.NetTotal | currency :"" : 2}}</td>
                        </tr>

                        <tr>
                            <th>Total in words :</th>
                            <td>{{totalAmountInWords}}</td>
                        </tr>

                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <div class="row">
            <div class="col-xs-12">
                <span>
                    <span style="display: flex;justify-content: flex-start;" class="pull-left"><b>Note : </b>  </span>
                    <span style="display: flex;justify-content: flex-end;padding-left:5px!important" ng-if="PurchaseOrderPrintViewModel.Remark" class="pull-left"> {{PurchaseOrderPrintViewModel.Remark}} </span>
                </span>
            </div>
        </div>
        <!-- /.row -->
        <!-- this row will not appear when printing -->
    </div>
