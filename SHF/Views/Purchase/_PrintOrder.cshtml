            </div>

            <div class="col-xs-6">
                <h2 class="pull-right">
                    <i class="fa fa-globe"></i> Purchase Order<br />
                    <small class="pull-right"> <b> # PO-{{PurchaseOrderPrintViewModel.ID}}</b><br /></small><br />
                    <small class="pull-right"> <b> Balance Due : &nbsp;{{PurchaseOrderPrintViewModel.NetTotal | currency :"₹" : 2}}</b><br /></small><br />
                   
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
