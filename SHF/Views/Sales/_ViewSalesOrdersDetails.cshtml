

<div class="modal-dialog modal-lg">
    <div class="modal-content">

        <!--myForm.$valid && -->
        <div class="modal-header">
            <button type="button" class="close" ng-click="ShowConfirm('modal-viewSalesOrderDetails')" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Sales Order Details</h4>
        </div>
        <div class="modal-body">
            <div class="row" ng-show="SalesOrderBodyViewModel.length > 0">
                <div class="col-md-12" style="overflow-x:auto;">
                    <table cellpadding="0" cellspacing="0" class="table table-striped table-responsive table-bordered table-condensed">
                        <thead>
                            <tr class="">
                                <th>Product</th>
                                <th>Sale Quantity</th>
                                <th>Balance Quantity</th>
                                <th>Unit Of Measurment</th>
                            </tr>
                        </thead>
                        <tbody class="">
                            <tr ng-repeat="poItem in SalesOrderBodyViewModel" class="ng-scope">
                                <td ng-bind="poItem.Product_Name"></td>
                                <td ng-bind="poItem.SaleQuantity"></td>
                                <td ng-bind="poItem.BalanceQuantity"></td>
                                <td ng-bind="poItem.UnitOfMeasurement_DisplayName"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row" ng-show="SalesOrderBodyViewModel.length <= 0">
                <div class="col-md-12" style="overflow-x:auto;">
                    <table cellpadding="0" cellspacing="0" class="table table-striped table-responsive table-bordered table-condensed">
                        <tr>
                            <td>There is no record to display....</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <span class="btn btn-sm btn-danger" ng-click="ShowConfirm('modal-viewSalesOrderDetails')">Close</span>
         </div>

    </div>
    <!-- /.modal-content -->
</div>
